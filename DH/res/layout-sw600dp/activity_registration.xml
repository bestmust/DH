<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Registration" >

    <com.example.dh.FloatLabelLayout
        android:id="@+id/editTextUserNameRegisterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

        <EditText
            android:id="@+id/editTextUserNameRegister"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="User Name"
            android:textSize="25sp" />
    </com.example.dh.FloatLabelLayout>

    <com.example.dh.FloatLabelLayout
        android:id="@+id/editTextEmailRegisterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextUserNameRegisterLayout"
        android:layout_below="@+id/editTextUserNameRegisterLayout"
        android:layout_marginTop="16dp"
        app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

        <EditText
            android:id="@+id/editTextEmailRegister"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="25sp" >
        </EditText>
    </com.example.dh.FloatLabelLayout>

    <com.example.dh.FloatLabelLayout
        android:id="@+id/editTextAddressRegisterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextEmailRegisterLayout"
        android:layout_alignRight="@+id/editTextEmailRegisterLayout"
        android:layout_below="@+id/editTextEmailRegisterLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

        <EditText
            android:id="@+id/editTextAddressRegister"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textSize="25sp" />
    </com.example.dh.FloatLabelLayout>

    <com.example.dh.FloatLabelLayout
        android:id="@+id/editTextPhoneRegisterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextAddressRegisterLayout"
        android:layout_alignRight="@+id/editTextAddressRegisterLayout"
        android:layout_below="@+id/editTextAddressRegisterLayout"
        android:layout_marginTop="16dp"
        app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

        <EditText
            android:id="@+id/editTextPhoneRegister"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:textSize="25sp" />
    </com.example.dh.FloatLabelLayout>

    <com.example.dh.FloatLabelLayout
        android:id="@+id/editTextPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextPhoneRegisterLayout"
        android:layout_alignRight="@+id/editTextPhoneRegisterLayout"
        android:layout_below="@+id/editTextPhoneRegisterLayout"
        app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="25sp" />
    </com.example.dh.FloatLabelLayout>

    <Button
        android:id="@+id/buttonRegisterRegistration"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPasswordLayout"
        android:layout_marginTop="73dp"
        android:background="@drawable/button"
        android:text="Register"
        android:gravity="center_horizontal"
        android:textColor="#DEDEDE"
        android:textSize="25sp" />

</RelativeLayout>